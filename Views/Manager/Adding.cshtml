@model Project2d.Models.MrgModel

@{
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<h2 style="margin-bottom:20px; text-align:center">Add Flight</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-container">
        <div class="form-row">
            <div class="form-group col">
                @Html.LabelFor(model => model.FCode)
                @Html.EditorFor(model => model.FCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FCode, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col">
                @Html.LabelFor(model => model.FName)
                @Html.EditorFor(model => model.FName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col">
                @Html.LabelFor(model => model.Source)
                @Html.EditorFor(model => model.Source, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Source, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col">
                @Html.LabelFor(model => model.Destination)
                @Html.EditorFor(model => model.Destination, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Destination, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col">
                @Html.LabelFor(model => model.Arrival)
                @Html.EditorFor(model => model.Arrival, new { htmlAttributes = new { @class = "form-control", type = "time" } })
                @Html.ValidationMessageFor(model => model.Arrival, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col">
                @Html.LabelFor(model => model.Departure)
                @Html.EditorFor(model => model.Departure, new { htmlAttributes = new { @class = "form-control", type = "time" } })
                @Html.ValidationMessageFor(model => model.Departure, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col">
                @Html.LabelFor(model => model.Exe_Seats)
                @Html.EditorFor(model => model.Exe_Seats, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Exe_Seats, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col">
                @Html.LabelFor(model => model.Exe_Fare)
                @Html.EditorFor(model => model.Exe_Fare, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Exe_Fare, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col">
                @Html.LabelFor(model => model.Eco_Seats)
                @Html.EditorFor(model => model.Eco_Seats, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Eco_Seats, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col">
                @Html.LabelFor(model => model.Eco_Fare)
                @Html.EditorFor(model => model.Eco_Fare, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Eco_Fare, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col">
                @Html.LabelFor(model => model.Bus_Seats)
                @Html.EditorFor(model => model.Bus_Seats, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Bus_Seats, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col">
                @Html.LabelFor(model => model.Bus_Fare)
                @Html.EditorFor(model => model.Bus_Fare, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Bus_Fare, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col text-center">
                <input type="submit" value="Add" class="btn btn-danger btn-sm" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    .form-container {
        width: 80%;
        margin: auto;
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .form-row {
        display: flex;
        justify-content: space-between;
        gap: 20px;
        margin-bottom: 15px;
    }

    .form-group.col {
        flex: 1;
    }

    .btn-success {
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 6px;
    }
    h2 {
        color: #ff6600;
    }
    .btn {
        padding: 6px 12px;
        border-radius: 6px;
        text-decoration: none;
        color: #fff !important;
        font-size: 14px;
        margin: 2px;
    }

    .btn-primary {
        background-color: #007bff;
    }

    .btn-danger {
        background-color: #dc3545;
    }

    .btn-success {
        background-color: #28a745;
        margin-bottom: 10px;
    }

    .btn-sm {
        font-size: 12px;
        padding: 4px 8px;
        height:40px;
        width:80px;
    }
</style>
